{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "https://backend-mymacros.vercel.app/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "/api/estimate"
    }
  },
  "github": {
    "silent": true
  }
}
